<?xml version="1.0" encoding="UTF-8"?>
<ssd:SystemStructureDescription xmlns:ssd="http://ssp-standard.org/SSP1/SystemStructureDescription"
                                xmlns:ssc="http://ssp-standard.org/SSP1/SystemStructureCommon"
                                xmlns:vico="http://github.com/NTNU-IHB/Vico/schema/Vico"
                                name="test1"
                                version="1.0">


    <ssd:System name="test1" description="Just a test">

        <ssd:Elements>
            <ssd:Component name="bouncingBall" source="../../../../test-fmus/fmus/1.0/BouncingBall.fmu">

                <ssd:Connectors>
                    <ssd:Connector name="h" kind="output">
                        <ssc:Real/>
                    </ssd:Connector>
                </ssd:Connectors>

                <ssd:ParameterBindings>
                    <ssd:ParameterBinding source="resources/initial_values.ssv"/>
                </ssd:ParameterBindings>

            </ssd:Component>
        </ssd:Elements>

    </ssd:System>

    <ssd:DefaultExperiment startTime="0.0" stopTime="10">
        <ssd:Annotations>
            <ssc:Annotation type="com.github.ntnu-ihb.vico">
                <vico:Algorithm>
                    <vico:FixedStepAlgorithm baseStepSize="1e-2"/>
                </vico:Algorithm>
            </ssc:Annotation>
        </ssd:Annotations>
    </ssd:DefaultExperiment>

</ssd:SystemStructureDescription>
